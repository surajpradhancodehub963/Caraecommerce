<%- include('./partials/header.ejs') %>
<div class="cart_page">
  <% if(isAuthenticated == 0 ){ %>
  <div class="notauthenticated">
    <h1 class="mb-3">Hey please login</h1>
    <button class="btn btn-success"><a href="/login">login</a></button>
  </div>
  <%} else { %>
  <div class="authenticated">
    <h1 class="mb-3">Hey <%= name %> </h1>
    <img src="/upload/<%= image %>" alt="sorry unable to fetch" class="mb-3">
    <div class="container">
        <div class="row">
            <div class="container-fluid">
              <div class="row">
                <% data.map((a)=>{ %>
                  <div class="col-md-6 col-sm">
                    <div class="cart_card p-3 mb-3 rounded shadow">
                      <div class="container-fluid">
                        <div class="row">
                          <div class="col-lg-4">
                            <img src="/upload/products/<%= a.image %>" alt="Sorry unable to fetch">
                          </div>
                          <div class="col-lg-8">
                            <h4 class="mb-2"><%= a.productname %></h4>
                            <h3 class="mb-2">Price:&#8377 <%= a.price %></h3>
                            <h5 class="mb-2">Size:XXL</h5>
                            <div>
                              <input type="number" id="quantity" value="1" style="border: none; padding: 3px 8px; width: 100px;">
                            </div>
                            <form action="/deletecartItem" method="post">
                              <input type="hidden" name="cartId" value="<%= a._id.toHexString() %>">
                              <div class="mt-3 cart_button_div">
                                <button class="cart_button ml-auton" type="submit"><i class="fa-solid fa-trash" style="color: red;"></i></button>
                              </div>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
          </div>
        </div>
    </div>
  </div>
  <% } %>
</div>
<%- include('./partials/footer.ejs') %>
