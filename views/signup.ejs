<%- include('./partials/header.ejs') %>
<div class="account_form p-5">
    <h1 class="text-center">CreateAccount</h1>
    <form action="/signup" method="post" class="p-5 rounded shadow">
      <div class="mb-3">
        <label for="email" class="form-label">Email address<span style="color: red;">*</span></label>
        <input type="email" class="form-control" id="email" name="email" />
      </div>
      <div class="mb-3">
        <label for="fullname" class="form-label">Fullname<span style="color: red;">*</span></label>
        <input type="text" class="form-control" id="fullname" name="fullname" />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">password<span style="color: red;">*</span></label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
        />
      </div>
      <div class="mb-3">
        <label for="confirm_password" class="form-label">confirm password<span style="color: red;">*</span></label>
        <input
          type="password"
          class="form-control"
          id="confirm_password"
          name="confirmPassword"
        />
      </div>
      <div class="mb-3 text-center">
        <button type="submit" class="normal">Signup</button>
      </div>
</div>
<%- include('./partials/footer.ejs') %>